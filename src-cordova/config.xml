<?xml version='1.0' encoding='utf-8'?>
<widget id="kr.oneon.sellerz" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>메타샵스</name>
    <description>쇼핑 플랫폼의 혁명</description>
    <author email="metashopse@gmail.com" href="https://metashopse.com">OneOn Inc.</author>
    <content src="index.html" />
    <access launch-external="yes" origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <platform name="android">
        <splash density="land-hdpi" src="res/screen/android/splash-land-hdpi.png" />
        <splash density="land-ldpi" src="res/screen/android/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="res/screen/android/splash-land-mdpi.png" />
        <splash density="land-xhdpi" src="res/screen/android/splash-land-xhdpi.png" />
        <splash density="land-xxhdpi" src="res/screen/android/splash-land-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="res/screen/android/splash-land-xxxhdpi.png" />
        <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.png" />
        <icon src="res/noticon/android/drawable/fcm_push_icon.png" />
        <config-file parent="/*" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.VIBRATE" />
            <uses-permission android:name="android.permission.READ_PHONE_STATE" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        </config-file>
    </platform>
    <platform name="ios">
        <allow-navigation href="http://k.kakaocdn.net/*" />
        <allow-navigation href="http://www.ftc.go.kr/*" />
        <allow-navigation href="http://escrow1.kbstar.com/*" />
        <allow-navigation href="http://info.sweettracker.co.kr/*" />
        <preference name="AllowInlineMediaPlayback" value="true" />
        <icon height="167" src="res/noticon/android/drawable/fcm_push_icon.png" width="167" />
        <icon height="57" src="res/noticon/android/drawable/fcm_push_icon.png" width="57" />
