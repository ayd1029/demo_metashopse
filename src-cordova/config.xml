    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-fcm-with-dependecy-updated" spec="^2.4.0" />
    <plugin name="iamport-ionic-inicis">
        <variable name="URL_SCHEME" value="kr.oneon.sellerz" />
    </plugin>
    <plugin name="cordova-plugin-kakao-sdk" spec="^3.0.0">
        <variable name="KAKAO_APP_KEY" value="34b327b92032472439c271675cd3a102" />
    </plugin>
    <plugin name="cordova-plugin-splashscreen" spec="https://github.com/apache/cordova-plugin-splashscreen.git" />
</widget>
